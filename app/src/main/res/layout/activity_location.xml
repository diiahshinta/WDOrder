<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="WDO APP"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title_where"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where your LOCATION?"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_margin="30dp"
        android:textStyle="bold"
        android:textSize="40sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_where"
        android:background="@drawable/shape_blue"
        android:text="KOSME SIER"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="30dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cikarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_sier"
        android:background="@drawable/shape_blue"
        android:text="KOSME CIKARANG"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="30dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_frame_4"/>

</androidx.constraintlayout.widget.ConstraintLayout>