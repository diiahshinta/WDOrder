<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_start">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- INFO DATA -->
    <style name="text_tabel_data">
        <item name="android:textStyle">bold</item>
        <item name="android:weightSum">3</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="text_data">
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- DETAIL DATA -->
    <style name="text_detail_data_judul">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_detail_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- CARD INFO DATA -->
    <style name="card_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_white_shadow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!-- BUTTON -->
    <style name="btn_submit_stb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:background">@drawable/shape_white</item>
    </style>

    <style name="btn_back">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">@drawable/shape_ic_back</item>
        <item name="android:drawableTop">@drawable/ic_back</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="card_btn_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/shape_white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="btn_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:padding">30dp</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

</resources>